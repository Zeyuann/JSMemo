// 1. 自己编写选项页面options_page
// 2. html5的localstorage
{
  "manifest_version": 2,
  "name": "查看天气",
  "description": "查看当前的天气状况",
  "version": "1.0",
  "browser_action": {
    "default_title": "天气预报",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "http://api.openweathermap.org/data/2.5/forecast?*"
  ]
}